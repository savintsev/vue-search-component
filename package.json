{
  "name": "vue-search-component",
  "version": "0.1.0",
  "private": true,
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:savintsev/vue-search-component.git"
  },
  "keywords": [
    "vue",
    "search",
    "component"
  ],
  "author": "Egor Savintsev",
  "license": "MIT",
  "description": "Search component for Sovcombank",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.3.0",
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-service": "~5.0.8",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "backpack.css": "^2.2.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "postcss-css-variables": "^0.18.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "sass": "^1.26.10",
    "sass-loader": "^8.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "printWidth": 160,
          "tabWidth": 4,
          "singleQuote": true,
          "trailingComma": "none",
          "bracketSpacing": false,
          "jsxBracketSameLine": true
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "postcss-css-variables": {},
      "postcss-flexbugs-fixes": {},
      "postcss-preset-env": {},
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 0.25%",
    "IE 11"
  ]
}
